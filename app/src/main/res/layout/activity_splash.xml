<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    tools:context="cl.philipsoft.ph1l.mywowchar.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        android:src="@mipmap/bg_login_wowchar" />


    <TextView
        android:id="@+id/charactersTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="@string/choose_character"
        android:textColor="@color/allianceFront"
        android:textScaleX="2" />

    <Spinner
        android:id="@+id/charactersSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/charactersTv"
        android:entries="@array/characters_array"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:prompt="@string/choose_character"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        android:background="@color/allianceBackground"
        android:popupBackground="@color/allianceBackground" />

    <Button
        android:id="@+id/loadBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/allianceBackground"
        android:enabled="false"
        android:text="@string/load"
        android:textColor="@color/allianceFront"
        android:visibility="gone"
        android:layout_marginBottom="50dp" />

</RelativeLayout>
